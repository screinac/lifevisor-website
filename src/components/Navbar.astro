---
import { Icon } from "astro-icon/components";
---

<nav
	class="navbar py-5 md:pb-7 md:justify-end md:px-[11vw] px-10 flex items-center justify-between bg-[#CFACAD] md:bg-transparent"
>
	<div
		class="h-8 w-8 border-2 border-[#E4EAF0] rounded-full shadow-md md:hidden"
	>
	</div>

	<Icon name="menu" size={40} class="md:hidden" />

	<div class="hidden md:flex gap-5">
		<div
			class="bg-[#CFACAD] py-4 px-10 rounded-full border-white/50 border glass"
		>
			<p
				class="text-sm text-white opacity-[0.8] text-shadow-lg tracking-[.25em]"
			>
				HOME
			</p>
		</div>
		<div
			class="bg-transparent py-4 px-10 rounded-full border-white/50 border glass"
		>
			<p
				class="text-sm text-white opacity-[0.8] text-shadow-lg tracking-[.25em]"
			>
				CONTACT
			</p>
		</div>
		<div
			class="bg-transparent py-4 px-10 rounded-full border-white/50 border glass"
		>
			<p
				class="text-sm text-white opacity-[0.8] text-shadow-lg tracking-[.25em]"
			>
				PRIVACY
			</p>
		</div>
	</div>
</nav>

<style>
	.glass {
		backdrop-filter: blur(5px);
	}
</style>
