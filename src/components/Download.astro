---
import { Icon } from "astro-icon/components";
import Image from "astro/components/Image.astro";
import bg1 from "../assets/download-bg1.png";
import bg2 from "../assets/download-bg2.png";
import img from "../assets/download.png";
---

<div class="relative flex flex-col items-center overflow-hidden">
	<Image
		src={bg1}
		class={"absolute w-full left-0 md:hidden"}
		layout="constrained"
		width={300}
		alt="Fondo del hero"
	/>
	<Image
		src={bg2}
		class={"absolute w-20 left-0 top-125 md:hidden"}
		layout="constrained"
		width={300}
		alt="Fondo del hero"
	/>

	<button
		class="fade-in-section z-20 bg-[#24333F] md:mt-30 md:px-40 md:mb-20 text-white mx-auto text-lg text-center opacity-80 px-8 py-3 rounded-full mt-15 tracking-[.3em]"
		>COMING SOON</button
	>

	<div class={"w-full z-10 shake-target"}>
		<Image
			src={img}
			class={"w-full z-10 md:hidden"}
			layout="constrained"
			width={300}
			alt="Fondo del hero"
		/>
	</div>
</div>

<style>
	.glass {
		backdrop-filter: blur(5px);
	}
	@keyframes diagonal-shaking {
		0% {
			transform: scale(1.02) rotate(0deg);
		}
		20% {
			transform: scale(1.02) rotate(2deg);
		}
		40% {
			transform: scale(1.02) rotate(-2deg);
		}
		60% {
			transform: scale(1.02) rotate(2deg);
		}
		80% {
			transform: scale(1.02) rotate(-2deg);
		}
		100% {
			transform: scale(1.02) rotate(0deg);
		}
	}

	.shake-once {
		animation: diagonal-shaking 0.4s ease-in-out 3;
	}
</style>

<script>
	const target = document.querySelector(".shake-target");

	if (target) {
		const observer = new IntersectionObserver(
			(entries, obs) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.classList.add("shake-once");
						obs.unobserve(entry.target); // ðŸ”¥ solo una vez
					}
				});
			},
			{
				threshold: 0.5, // 50% visible
			},
		);

		observer.observe(target);
	}
</script>
