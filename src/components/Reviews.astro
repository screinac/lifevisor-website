---
import { Icon } from "astro-icon/components";
import Image from "astro/components/Image.astro";
import bg1 from "../assets/review-bg1.png";
import bg2 from "../assets/review-bg2.png";
---

<div class="px-6 pb-10 relative flex flex-col items-center">
	<Image
		src={bg1}
		class={"absolute w-90 right-0"}
		layout="constrained"
		width={300}
		alt="Fondo del hero"
	/>
	<Image
		src={bg2}
		class={"absolute w-70 left-0 top-115"}
		layout="constrained"
		width={300}
		alt="Fondo del hero"
	/>
	<h3 class="text-7xl mb-15 text-white font-bold text-center mt-12 z-10">
		Our
		<br />
		<span class="font-normal tracking-[.3em] ml-3 text-6xl"> reviews </span>
	</h3>
	<div
		class="glass h-130 pb-18 flex flex-col justify-between bg-[#F5F5F5]/70 py-12 border border-white/50 px-16 w-full rounded-[40px]"
	>
		<div>
			<h5
				class="text-2xl font-bold tracking-[.3em] text-[#24333F] text-shadow-lg opacity-80"
			>
				Habit
				<br />
				App
			</h5>
			<p class="mt-13 opacity-80 text-lg text-[#121920]">
				I think there is no other app like this, but I donâ€™t use it so
				much.
			</p>
		</div>
		<div class="flex justify-center">
			<Icon name="star" size={25} />
			<Icon name="star" size={25} />
			<Icon name="star" size={25} />
			<Icon name="star" size={25} />
			<Icon name="star" size={25} />
		</div>
	</div>

	<div class="flex mt-5 gap-1">
		<div class="h-2 w-2 rounded-full bg-[#121920]"></div>
		<div class="h-2 w-2 rounded-full bg-[#121920] opacity-30"></div>
		<div class="h-2 w-2 rounded-full bg-[#121920] opacity-30"></div>
		<div class="h-2 w-2 rounded-full bg-[#121920] opacity-30"></div>
	</div>
</div>

<style>
	.glass {
		backdrop-filter: blur(5px);
	}
</style>
